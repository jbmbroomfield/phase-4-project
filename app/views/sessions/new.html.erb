<h1>Login</h1>

<%= render 'forms/error_explanation', object: @user, description: 'login' %>

<div class="<%= row_class(0, 1) %>">
  <%= form_for :user, url: '/login' do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %><br>
    <%= f.label :password %>
    <%= f.password_field :password %><br>
    <%= f.submit "Submit" %>
  <% end %>
</div>